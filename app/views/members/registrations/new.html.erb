<h2>サインアップ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field from-group">
    <%= f.label :email,class: "center-block" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control"%>
  </div>

  <div class="field form-group">
    <%= f.label :"名前" ,class: "center-block" %>
    <%= f.text_field :name , autofocus: true,class: "form-control" %>
  </div>

  <div class="field form-group">
      <%= f.label :"誕生日" %>
      <%= f.date_select(
              :birth,
              start_year: 1900,
              end_year:   (Time.now.year),
              default:    Date.new(1970, 1, 1)) %>
  </div>

  <div class="center-block">
    <%= f.label :"画像"  ,class: "center-block"%>
  </div>
  <div><%= f.file_field :image  ,class: "center-block"%></div>
  <%#= form.hidden_field :id %>
  <div class="field form-group">
    <%= f.label :password ,class: "center-block"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation ,class:"center-block" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "サインアップ" ,class: "center-block"%>
  </div>
<% end %>

<%= render "members/shared/links" %>
